extends ../layouts/default

block variables
	- const title = "TIQUM";

block content
	.wrapper
		include ../../blocks/modules/header/header
		.page.about-page
			.container
				.page-header.flex-lr
					.flex-lr__left
					.flex-lr__right
						h1.general-title О компании

			.about-page__content
				.about-page__block.container
					.flex-lr
						.flex-lr__left
						.flex-lr__right
							.about-page__text.general-intro Tiqum — ведущий digital интегратор, с 2007 года мы предлагаем полный цикл решений для цифровой трансформации 360°: <span>разработку IT-сервисов, веб и мобильных приложений, проектирование клиентского опыта (CX), интеграцию корпоративных решений и автоматизацию бизнес-процессов на основе данных бизнес- и системной аналитики</span>
				.about-page__gray
					.container.container--gray
						.flex-lr
							.flex-lr__left
							.flex-lr__right
								.about-page__text.general-intro Результатом нашей работы становится качественный продукт или сервис, представляющий ценность как для клиента, так и для потребителя, что подтверждено наградами <span>в отраслевых конкурсах</span>

				.about-page__confirm.confirm
					.container
						.confirm__items
							.confirm__item
								.confirm__item-left ТОП 1 в разработке
								.confirm__item-right
									span Рейтинг рунета
									span 2018
								.confirm__img-big
									img(src="img/confirm/1.png", alt="alt")
							.confirm__item
								.confirm__item-left ТОП4 в рейтинге эффективности интернет-банков
								.confirm__item-right
									span Рейтинг рунета
									span 2018
								.confirm__img-big
									img(src="img/confirm/2.png", alt="alt")
							.confirm__item
								.confirm__item-left Лучший сайт-сервис
								.confirm__item-right
									span Рейтинг рунета
									span 2018
								.confirm__img-big
									img(src="img/confirm/3.png", alt="alt")
							.confirm__item
								.confirm__item-left ТОП 1 в разработке
								.confirm__item-right
									span Рейтинг рунета
									span 2018
								.confirm__img-big
									img(src="img/confirm/1.png", alt="alt")



				.about-page__clients.container
					.about-page__clients-title.flex-lr
						.flex-lr__left
						.flex-lr__right
							.about-page__title.general-title Клиенты
							.about-page__text.general-intro Свои проекты нам доверяют <span>перспективные стартапы, корпорации и госкомпании</span>

				.about-page__clients-grid.clients-grid
